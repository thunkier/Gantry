<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Gantry.UI.Shell.ViewModels"
        xmlns:rvm="clr-namespace:Gantry.UI.Features.Requests.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="Gantry.UI.Shell.Views.AppSettingsDialog"
        x:DataType="vm:AppSettingsViewModel"
        x:Name="Root"
        Title="Gantry Settings"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <TabControl Margin="10">
        <TabItem Header="General">
            <StackPanel Margin="10" Spacing="20">
                <TextBlock Text="Application Settings" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="General settings will go here."/>
                
                <CheckBox Content="Check for updates automatically" IsChecked="True"/>
                <CheckBox Content="Send anonymous usage statistics" IsChecked="True"/>
                
                <Button Content="Close" HorizontalAlignment="Right" Click="OnCloseClick"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="System Variables">
            <Grid RowDefinitions="Auto, *, Auto" Margin="10">
                <TextBlock Text="Global System Variables (stored in %APPDATA%/Gantry/user.toml)" Margin="0,0,0,10" TextWrapping="Wrap" />
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding SystemVariables}" AutoGenerateColumns="False" CanUserResizeColumns="True" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*" />
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*" />
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="Auto" />
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate DataType="rvm:VariableViewModel">
                                    <Button Content="âœ•" Command="{Binding #Root.DataContext.RemoveVariableCommand}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Foreground="Red" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <Button Grid.Row="2" Content="Add Variable" Command="{Binding AddVariableCommand}" Margin="0,10,0,0" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>
